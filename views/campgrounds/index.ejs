<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4"><i class="fas fa-campground"></i>Welcome to YelpCamp!</h1>
            <p class="lead">View campgrounds from all over the world</p>
            <hr class="my-2">
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add a new campground</a>
            </p>
        </div>

    </div>

    <div class="row">
        <% campgrounds.forEach(campground => { %>
            <div class="col-sm-6 col-md-4 mb-4">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>"> More Info</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include("../partials/footer") %>