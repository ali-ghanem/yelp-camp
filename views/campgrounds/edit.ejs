<%- include("../partials/header") %>

<div class="container">
    <h1 class="mb-5 text-center">Edit <%= campground.name %> </h1>
    <div class="form-container">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" placeholder="price per night"  value="<%= campground.price %>" min="1" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[description]" placeholder="Description" value="<%= campground.description %>">
            </div>
            <div class="form-inline">
                    <input class="btn btn-primary mr-3" type="submit" class="btn btn-primary"></input>
                    <a class="btn btn-secondary" href="/campgrounds/<%= campground._id %>/" >Cancel</a>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>