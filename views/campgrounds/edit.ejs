<%- include("../partials/header") %>

<div class="container">
    <h1 class="mb-5 text-center">Edit <%= campground.name %> </h1>
    <div class="form-container">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="inputName">Campground Name *</label>
                <input class="form-control" type="text" id="inputName" name="campground[name]" placeholder="Name"
                    value="<%= campground.name %>" required>
            </div>
            <div class="form-group">
                <label for="inputPrice">Price Per Night *</label>
                <input class="form-control" type="number" id="inputPrice" name="campground[price]"
                    placeholder="price per night" value="<%= campground.price %>" min="1" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="inputCountry">Country *</label>
                <select class="form-control gds-cr" country-data-region-id="gds-cr-1" data-language="en"
                    id="inputCountry" name="campground[country]" country-data-default-value="<%= campground.country %>" required></select>
            </div>
            <div class="form-group">
                <label for="gds-cr-1">City</label>
                <select class="form-control" id="gds-cr-1" name="campground[city]" region-data-default-value="<%= campground.city %>"></select>
            </div>
            <div class="form-group">
                <label for="inputPhone">Contact Phone *</label>
                <input class="form-control" type="tel" id="inputPhone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                    name="campground[contactPhone]" placeholder="012-345-6789" value="<%= campground.contactPhone %>"
                    required>
            </div>
            <div class="form-group">
                <label for="inputEmail">Contact Email *</label>
                <input class="form-control" type="email" id="inputEmail" name="campground[contactEmail]"
                    placeholder="contact email" value="<%= campground.contactEmail %>" required>
            </div>
            <div class="form-group">
                <label for="inputImage">Image</label>
                <input class="form-control" type="text" id="inputImage" name="campground[image]" placeholder="Image URL"
                    value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <label for="inputDescription">Description</label>
                <input class="form-control" type="text" id="inputDescription" name="campground[description]"
                    placeholder="Description" value="<%= campground.description %>">
            </div>
            <div class="form-inline">
                <input class="btn btn-primary mr-3" type="submit" class="btn btn-primary" value="Save"></input>
                <a class="btn btn-secondary" href="/campgrounds/<%= campground._id %>/">Cancel</a>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>