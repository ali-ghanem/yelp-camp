<%- include("../partials/header") %>

<div class="container">
    <h1 class="mb-4 text-center">Create a New Campground</h1>
    <div class="form-container">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="inputName">Campground Name *</label>
                <input class="form-control" type="text" id="inputName" name="name" placeholder="name" required>
            </div>
            <div class="form-group">
                <label for="inputPrice">Price Per Night *</label>
                <input class="form-control" type="number" id="inputPrice" name="price" placeholder="$/night" min="1"
                    step="0.01" required>
            </div>
            <div class="form-group">
                <label for="inputCountry">Country *</label>
                <select class="form-control gds-cr" country-data-region-id="gds-cr-1" data-language="en"
                    id="inputCountry" name="country" required></select>
            </div>
            <div class="form-group">
                <label for="gds-cr-1">City </label>
                <select class="form-control" id="gds-cr-1" name="city"></select>
            </div>
            <div class="form-group">
                <label for="inputPhone">Contact Phone *</label>
                <input class="form-control" type="tel" id="inputPhone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                    name="contactPhone" placeholder="012-345-6789" required>
            </div>
            <div class="form-group">
                <label for="inputEmail">Contact Email *</label>
                <input class="form-control" type="email" id="inputEmail" name="contactEmail"
                    placeholder="contact email" required>
            </div>
            <div class="form-group">
                <label for="inputImage">Image</label>
                <input class="form-control" type="text" id="inputImage" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <label for="inputDescription">Description</label>
                <input class="form-control" type="text" id="inputDescription" name="description"
                    placeholder="description">
            </div>
            <div class="form-inline">
                <input class="btn btn-primary mr-3" type="submit" class="btn btn-primary"></input>
                <a class="btn btn-secondary" href="/campgrounds">Cancel</a>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>