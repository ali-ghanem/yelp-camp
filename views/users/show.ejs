<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-4">
            <img src="<%= user.photo %>" alt="user photo">
            <h2><%= user.firstName + " " + user.lastName %></h2>
        </div>
        <div class="col-8">
            <% campgrounds.forEach(campground => { %>
            <div class="col-sm-6 col-md-4 mb-4 d-flex align-items-stretch">
                <div class="camp-card">
                    <div class="card h-100">
                        <img class="card-img-top img-fluid" src="<%= campground.image %>" alt="">

                        <div class="card-body text-center">
                            <h4 class="card-title"><%= campground.name %></h4>
                            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>"> More Info</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>




<%- include("../partials/footer") %>